<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/ban"
    android:orientation="vertical">

    <FrameLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp">


        <LinearLayout

            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/backgroudfram">

            <TextView
                android:id="@+id/tvTien"
                android:text="400"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:background="@drawable/backgroudview"/>


        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/baucua"/>

    </FrameLayout>

    <LinearLayout

        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <GridView
            android:id="@+id/grbanco"
            android:layout_width="match_parent"
            android:layout_height="409dp"
            android:layout_marginTop="10dp"
            android:numColumns="3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/xingau1"
            android:layout_marginLeft="170dp"
            android:background="@drawable/hinhdongbaucua"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <ImageView
            android:id="@+id/xingau2"
            android:background="@drawable/hinhdongbaucua"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <ImageView
            android:id="@+id/xingau3"
            android:background="@drawable/hinhdongbaucua"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    </LinearLayout>
    <Button
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroudfram"

        android:layout_gravity="center"
